<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="525.0" prefWidth="665.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.studentmanagement.controllers.studentController.AttendanceController">

    <center>
        <StackPane fx:id="contentPane" prefHeight="299.0" prefWidth="537.0" style="-fx-background-color: white; -fx-padding: 20;">
            <VBox spacing="10">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Attendance" />
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Select Class:"/>
                    <ComboBox fx:id="classComboBox"/>
                </HBox>
                <TableView fx:id="attendanceTable">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Name" />
                        <TableColumn fx:id="dateColumn" text="Date" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                    </columns>
                </TableView>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
