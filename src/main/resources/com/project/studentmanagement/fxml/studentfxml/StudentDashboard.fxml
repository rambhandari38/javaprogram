               <Insets top="15.0" />
            </VBox.margin></Button>
            <Button onAction="#loadGrade" prefHeight="37.0" prefWidth="170.0" styleClass="avsButton" stylesheets="@../../css/student_dashboard.css" text="Grades">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Button>
            <Button onAction="#loadAttendance" prefHeight="37.0" prefWidth="170.0" styleClass="avsButton" stylesheets="@../../css/student_dashboard.css" text="Attendance">
