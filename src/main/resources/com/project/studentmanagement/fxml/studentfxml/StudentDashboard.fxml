            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Button>
            <Button onAction="#loadPersonalInformation" prefHeight="37.0" prefWidth="170.0" styleClass="avsButton" stylesheets="@../../css/student_dashboard.css" text="Personal Information">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Button>
            <Button onAction="#loadForm" prefHeight="37.0" prefWidth="170.0" styleClass="avsButton" stylesheets="@../../css/student_dashboard.css" text="Form">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Button>
            <Button onAction="#loadAnnouncementDashboard" prefHeight="37.0" prefWidth="170.0" styleClass="avsButton" stylesheets="@../../css/student_dashboard.css" text="Announcement">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin></Button>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentPane" prefHeight="1250.0" style="-fx-background-color: white;">
            <Label prefHeight="144.0" prefWidth="491.0" style="-fx-background-color: #444444; -fx-text-fill: white;" text="Welcome to the Student Dashboard">
            <font>
               <Font size="29.0" />
            </font>
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
