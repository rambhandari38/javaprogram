                     <Insets right="15.0" />
                  </HBox.margin></Button>
            </children>
         </HBox>
        </HBox>
    </top>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="751.0" prefWidth="232.0" style="-fx-background-color: #444444; -fx-border-color: black; -fx-border-width: 5;">
            <Button onAction="#loadOverview" prefHeight="37.0" prefWidth="170.0" styleClass="avsButton" stylesheets="@../../css/student_dashboard.css" text="Overview">
