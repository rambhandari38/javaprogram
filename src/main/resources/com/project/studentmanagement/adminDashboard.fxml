<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="475.0" prefWidth="284.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.studentmanagement.controllers.AdminDashboardController" stylesheets="@css/admin_dashboard.css">
    <Label fx:id="welcomeLabel" />
    <Label fx:id="roleLabel" />
    <TextField fx:id="newUserField" promptText="New Username">
        <VBox.margin>
            <Insets left="65.0" right="65.0" />
        </VBox.margin>
    </TextField>
    <PasswordField fx:id="newPasswordField" promptText="New Password">
        <VBox.margin>
            <Insets left="65.0" right="65.0" />
        </VBox.margin>
    </PasswordField>
    <TextField fx:id="newRoleField" promptText="New Role">
        <VBox.margin>
            <Insets left="65.0" right="65.0" />
        </VBox.margin>
    </TextField>
    <Button fx:id="addUserButton" onAction="#addUser" text="Add User">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Button>
    <Button onAction="#handleLogout" text="Logout">
        <VBox.margin>
            <Insets top="150.0" />
        </VBox.margin>
    </Button>
</VBox>
